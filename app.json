{
  "expo": {
    "name": "Grocery Manager",
    "slug": "grocery-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.grocerymanager.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan barcodes for grocery items."
      }
    },
    "android": {
      "package": "com.grocerymanager.app",
      "permissions": ["CAMERA"]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Grocery Manager to access your camera to scan barcodes."
        }
      ]
    ]
  }
}
