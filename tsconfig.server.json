{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true
  },
  "include": ["server/**/*", "shared/**/*", "db/**/*"],
  "exclude": ["node_modules", "client", "dist"]
} 